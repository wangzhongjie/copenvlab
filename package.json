{
  "workspaces": [
    "frontend",
    "backend-node"
  ],
  "scripts": {
    "start:front:node": "cd frontend && npm run serve:node",
    "start:front:python": "cd frontend && npm run serve:python",
    "start:node": "cd backend-node && node server.js 3001",
    "start:python": "cross-env-shell \"cd backend-python && (python3 manage.py runserver 3002 || python manage.py runserver 3002)\"",
    "start:all": "concurrently \"npm:start:node\" \"npm:start:py\" \"npm:start:front:node\" \"npm:start:front:python\""
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3"
  },
  "dependencies": {
    "cheerio": "^1.0.0",
    "dotenv": "^16.5.0",
    "iconv-lite": "^0.6.3"
  }
}